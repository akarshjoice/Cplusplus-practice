# Use a PanedWindow to make sections resizable
self.paned_window = ttk.PanedWindow(self, orient=tk.HORIZONTAL)
self.paned_window.grid(row=0, column=0, sticky="nsew")

# Section 1
self.section1 = tk.Frame(self.paned_window)
self.section1.rowconfigure(0, weight=1)
self.section1.rowconfigure(1, weight=1)
self.section1.rowconfigure(2, weight=1)
self.section1.columnconfigure(0, weight=1)
self.paned_window.add(self.section1, weight=3)  # Weight defines the initial size proportion

# Section 2
self.section2 = tk.Frame(self.paned_window)
self.section2.rowconfigure(0, weight=1)
self.section2.columnconfigure(0, weight=1)
self.paned_window.add(self.section2, weight=1)  # Weight defines the initial size proportion
